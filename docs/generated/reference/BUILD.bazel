exports_files(["config.yaml"])

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//docs/generated/reference/openapi:all-srcs",
        "//docs/generated/reference/swagger-gen:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
