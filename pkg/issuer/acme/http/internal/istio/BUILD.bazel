    name = "go_default_library",
    srcs = [
        "istio.go",
        "istio_deepcopy.gen.go",
    ],
    importpath = "github.com/jetstack/cert-manager/pkg/issuer/acme/http/internal/istio",
    visibility = ["//:__subpackages__"],
