package(default_visibility = ["//visibility:public"])

filegroup(
    name = "chart-srcs",
    srcs = glob(
        [
            "*.yaml",
            "*.txt",
        ],
    ),
    visibility = ["//visibility:public"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
