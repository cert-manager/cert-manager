load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "acme.go",
        "http.go",
        "jws.go",
        "types.go",
    ],
    importmap = "github.com/jetstack/cert-manager/vendor/golang.org/x/crypto/acme",
    importpath = "golang.org/x/crypto/acme",
    tags = ["manual"],
