load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "configuration.go",
        "consumer_key.go",
        "error.go",
        "logger.go",
        "ovh.go",
    ],
    importmap = "github.com/xenolf/lego/vendor/github.com/ovh/go-ovh/ovh",
    importpath = "github.com/ovh/go-ovh/ovh",
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/xenolf/lego/vendor/gopkg.in/ini.v1:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
