load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "client.go",
        "default.go",
        "middleware.go",
        "redirect.go",
        "request.go",
        "request16.go",
        "request17.go",
        "response.go",
        "resty.go",
        "retry.go",
        "util.go",
    ],
    importmap = "github.com/xenolf/lego/vendor/github.com/go-resty/resty",
    importpath = "github.com/go-resty/resty",
    visibility = ["//visibility:public"],
    deps = ["//vendor/github.com/xenolf/lego/vendor/golang.org/x/net/publicsuffix:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
