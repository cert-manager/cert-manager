load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "client.go",
        "decoder.go",
        "encoder.go",
        "request.go",
        "response.go",
        "xmlrpc.go",
    ],
    importmap = "github.com/xenolf/lego/vendor/github.com/kolo/xmlrpc",
    importpath = "github.com/kolo/xmlrpc",
    visibility = ["//visibility:public"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
