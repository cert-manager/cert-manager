load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "config.go",
        "errors.go",
        "signer.go",
    ],
    importmap = "github.com/xenolf/lego/vendor/github.com/akamai/AkamaiOPEN-edgegrid-golang/edgegrid",
    importpath = "github.com/akamai/AkamaiOPEN-edgegrid-golang/edgegrid",
    visibility = ["//visibility:public"],
    deps = [
        "//vendor/github.com/xenolf/lego/vendor/github.com/go-ini/ini:go_default_library",
        "//vendor/github.com/xenolf/lego/vendor/github.com/google/uuid:go_default_library",
        "//vendor/github.com/xenolf/lego/vendor/github.com/mitchellh/go-homedir:go_default_library",
        "//vendor/github.com/xenolf/lego/vendor/github.com/sirupsen/logrus:go_default_library",
    ],
