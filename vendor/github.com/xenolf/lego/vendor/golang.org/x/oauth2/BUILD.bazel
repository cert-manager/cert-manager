load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "oauth2.go",
        "token.go",
        "transport.go",
    ],
    importmap = "github.com/xenolf/lego/vendor/golang.org/x/oauth2",
    importpath = "golang.org/x/oauth2",
    visibility = ["//visibility:public"],
    deps = [
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/net/context:go_default_library",
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/oauth2/internal:go_default_library",
    ],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [
        ":package-srcs",
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/oauth2/clientcredentials:all-srcs",
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/oauth2/google:all-srcs",
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/oauth2/internal:all-srcs",
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/oauth2/jws:all-srcs",
        "//vendor/github.com/xenolf/lego/vendor/golang.org/x/oauth2/jwt:all-srcs",
    ],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
