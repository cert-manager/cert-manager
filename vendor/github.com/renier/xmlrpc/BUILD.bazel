load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "client.go",
        "decoder.go",
        "encoder.go",
        "request.go",
        "response.go",
        "xmlrpc.go",
    ],
    importmap = "github.com/jetstack/cert-manager/vendor/github.com/renier/xmlrpc",
    importpath = "github.com/renier/xmlrpc",
    tags = ["manual"],
    visibility = ["//visibility:public"],
    deps = ["//vendor/golang.org/x/text/encoding/charmap:go_default_library"],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
