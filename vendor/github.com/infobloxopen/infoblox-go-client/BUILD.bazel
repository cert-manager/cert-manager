load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "go_default_library",
    srcs = [
        "connector.go",
        "lock.go",
        "object_manager.go",
        "objects.go",
    ],
    importmap = "github.com/jetstack/cert-manager/vendor/github.com/infobloxopen/infoblox-go-client",
    importpath = "github.com/infobloxopen/infoblox-go-client",
    tags = ["manual"],
    visibility = ["//visibility:public"],
    deps = [
        "//vendor/github.com/sirupsen/logrus:go_default_library",
        "//vendor/golang.org/x/net/publicsuffix:go_default_library",
    ],
)

go_test(
    name = "go_default_test",
    srcs = [
        "connector_test.go",
        "infoblox_go_client_suite_test.go",
        "object_manager_test.go",
        "objects_test.go",
    ],
    embed = [":go_default_library"],
    tags = ["manual"],
    deps = [
        "//vendor/github.com/onsi/ginkgo:go_default_library",
        "//vendor/github.com/onsi/gomega:go_default_library",
    ],
)

filegroup(
    name = "package-srcs",
    srcs = glob(["**"]),
    tags = ["automanaged"],
    visibility = ["//visibility:private"],
)

filegroup(
    name = "all-srcs",
    srcs = [":package-srcs"],
    tags = ["automanaged"],
    visibility = ["//visibility:public"],
)
