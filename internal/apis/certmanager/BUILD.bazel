load("@io_bazel_rules_go//go:def.bzl", "go_library")

go_library(
    name = "go_default_library",
    srcs = [
        "doc.go",
        "generic_issuer.go",
        "register.go",
        "types.go",
        "types_certificate.go",
        "types_certificaterequest.go",
        "types_issuer.go",
        "zz_generated.deepcopy.go",
